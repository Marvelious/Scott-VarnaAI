# ABOUTME: Global environment template for all VarnaAI apps
# ABOUTME: Copy to .env and fill with actual values - NEVER commit .env

# === INFRASTRUCTURE ===
HETZNER_IP=YOUR_SERVER_IP
DOMAIN_BASE=varnaai.com
ENVIRONMENT=demo  # demo|staging|production

# === DATABASE ===
DATABASE_URL=postgresql://postgres:CHANGE_ME@postgres:5432/varnaai
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_USER=postgres
POSTGRES_DB=varnaai

# === REDIS ===
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_ME_IN_PROD

# === DEMO MODE ===
DEMO_MODE=true  # CRITICAL: Set to true for all demo deployments
DEMO_WARNING_BANNER=true
DISABLE_EXTERNAL_APIS=true

# === CLOUDFLARE ===
CLOUDFLARE_TUNNEL_TOKEN=YOUR_TUNNEL_TOKEN
CLOUDFLARE_ACCESS_TEAM=YOUR_TEAM_NAME
CF_API_TOKEN=YOUR_API_TOKEN
CF_ZONE_ID=YOUR_ZONE_ID

# === SECRETS ===
JWT_SECRET=GENERATE_WITH_OPENSSL
SESSION_SECRET=GENERATE_WITH_OPENSSL
ENCRYPTION_KEY=GENERATE_WITH_OPENSSL

# === MONITORING ===
GRAFANA_ADMIN_PASSWORD=CHANGE_ME
PROMETHEUS_RETENTION_TIME=7d
LOKI_RETENTION_DAYS=7

# === BACKUP ===
RESTIC_PASSWORD=STRONG_PASSWORD_HERE
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=varnaai-backups
AWS_ACCESS_KEY_ID=YOUR_KEY
AWS_SECRET_ACCESS_KEY=YOUR_SECRET

# === AI/LLM ===
OLLAMA_HOST=http://host.docker.internal:11434  # Local dev
OPENAI_API_KEY=sk-YOUR_KEY  # For demos only
ANTHROPIC_API_KEY=sk-YOUR_KEY  # Optional
LLM_PROVIDER=ollama  # ollama|openai|anthropic

# === EMAIL (Optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@varnaai.com
SMTP_PASSWORD=APP_SPECIFIC_PASSWORD

# === COMPLIANCE ===
GDPR_MODE=true
DATA_RESIDENCY=EU
AUDIT_LOG_ENABLED=true
YMYL_DISCLAIMERS=true  # Critical for Pension app

# === FEATURE FLAGS ===
ENABLE_ANALYTICS=false  # Start with false for demos
ENABLE_PAYMENT=false    # No payments in demo mode
ENABLE_NOTIFICATIONS=false
MAINTENANCE_MODE=false

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# === LOGGING ===
LOG_LEVEL=info  # debug|info|warn|error
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true