# ==============================================
# MARKETING MONSTER CONFIGURATION
# Copy this file to .env and fill in your API keys
# ==============================================

# Server Configuration
NODE_ENV=production
PORT=3000
API_BASE_URL=https://your-domain.com

# ==============================================
# MAILCHIMP CONFIGURATION
# Get API key from: mailchimp.com/account/api/
# Server prefix is first part of API key (e.g., us19)
# ==============================================

MAILCHIMP_API_KEY=your_api_key_here
MAILCHIMP_SERVER_PREFIX=us19

# MailChimp List IDs (Audience IDs)
MAILCHIMP_LIST_AI_PROJEKT=abc123
MAILCHIMP_LIST_AI_MARKETING=def456
MAILCHIMP_LIST_SECURITY=ghi789
MAILCHIMP_LIST_AGENTEN=jkl012
MAILCHIMP_LIST_VARNAAI=mno345

# MailChimp Transactional (Mandrill)
MAILCHIMP_TRANSACTIONAL_KEY=your_mandrill_key

# ==============================================
# BUFFER CONFIGURATION
# Get access token from: buffer.com/developers/api
# Profile IDs found in Buffer dashboard URL
# ==============================================

BUFFER_ACCESS_TOKEN=your_buffer_token

# Buffer Profile IDs - AI Projektmanager
BUFFER_PROFILE_AI_PROJEKT_LINKEDIN=abc123
BUFFER_PROFILE_AI_PROJEKT_FACEBOOK=def456
BUFFER_PROFILE_AI_PROJEKT_TWITTER=ghi789

# Buffer Profile IDs - AI Marketing BG
BUFFER_PROFILE_AI_MARKETING_LINKEDIN=jkl012
BUFFER_PROFILE_AI_MARKETING_FACEBOOK=mno345
BUFFER_PROFILE_AI_MARKETING_TWITTER=pqr678

# Buffer Profile IDs - Classic Security
BUFFER_PROFILE_SECURITY_LINKEDIN=stu901
BUFFER_PROFILE_SECURITY_FACEBOOK=vwx234
BUFFER_PROFILE_SECURITY_TWITTER=yza567

# Buffer Profile IDs - Varna Agenten
BUFFER_PROFILE_AGENTEN_LINKEDIN=bcd890
BUFFER_PROFILE_AGENTEN_FACEBOOK=efg123
BUFFER_PROFILE_AGENTEN_TWITTER=hij456

# Buffer Profile IDs - Varna AI
BUFFER_PROFILE_VARNAAI_LINKEDIN=klm789
BUFFER_PROFILE_VARNAAI_FACEBOOK=nop012
BUFFER_PROFILE_VARNAAI_TWITTER=qrs345

# ==============================================
# TRACKING PIXELS
# ==============================================

# Facebook Pixel IDs (one per website)
FACEBOOK_PIXEL_AI_PROJEKT=123456789
FACEBOOK_PIXEL_AI_MARKETING=234567890
FACEBOOK_PIXEL_SECURITY=345678901
FACEBOOK_PIXEL_AGENTEN=456789012
FACEBOOK_PIXEL_VARNAAI=567890123

# Facebook Conversions API (CAPI)
FACEBOOK_ACCESS_TOKEN=your_facebook_system_user_token

# Google Analytics 4 Measurement IDs
GA4_AI_PROJEKT=G-XXXXXXXXXX
GA4_AI_MARKETING=G-YYYYYYYYYY
GA4_SECURITY=G-ZZZZZZZZZZ
GA4_AGENTEN=G-AAAAAAAAAA
GA4_VARNAAI=G-BBBBBBBBBB

# GA4 Measurement Protocol (Server-Side Tracking)
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=your_ga4_api_secret

# Microsoft Clarity Project IDs
CLARITY_AI_PROJEKT=abc123def
CLARITY_AI_MARKETING=ghi456jkl
CLARITY_SECURITY=mno789pqr
CLARITY_AGENTEN=stu012vwx
CLARITY_VARNAAI=yza345bcd

# LinkedIn Insight Tag Partner IDs
LINKEDIN_AI_PROJEKT=1234567
LINKEDIN_AI_MARKETING=2345678
LINKEDIN_SECURITY=3456789
LINKEDIN_AGENTEN=4567890
LINKEDIN_VARNAAI=5678901

# ==============================================
# CRM INTEGRATION
# ==============================================

# HubSpot
HUBSPOT_ACCESS_TOKEN=your_hubspot_token
HUBSPOT_PORTAL_ID=your_portal_id

# Pipedrive
PIPEDRIVE_API_TOKEN=your_pipedrive_token
PIPEDRIVE_DOMAIN=yourcompany.pipedrive.com

# ==============================================
# ZAPIER WEBHOOKS
# ==============================================

ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/xxxxx/yyyyy/
ZAPIER_WEBHOOK_SECRET=your_webhook_secret

# ==============================================
# SLACK NOTIFICATIONS
# ==============================================

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx/yyyyy/zzzzz
SLACK_CHANNEL_LEADS=#leads
SLACK_CHANNEL_SALES=#sales

# ==============================================
# GOOGLE ADS
# ==============================================

GOOGLE_ADS_CLIENT_ID=your_client_id
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_CUSTOMER_ID=123-456-7890

# ==============================================
# META ADS (FACEBOOK/INSTAGRAM)
# ==============================================

META_APP_ID=your_app_id
META_APP_SECRET=your_app_secret
META_AD_ACCOUNT_ID=act_1234567890

# ==============================================
# LINKEDIN ADS
# ==============================================

LINKEDIN_ADS_ACCESS_TOKEN=your_linkedin_token
LINKEDIN_ADS_ACCOUNT_ID=123456789

# ==============================================
# CALENDLY (DEMO BOOKING)
# ==============================================

CALENDLY_API_KEY=your_calendly_key
CALENDLY_WEBHOOK_SECRET=your_webhook_secret

# Calendly Links per Website
CALENDLY_LINK_AI_PROJEKT=https://calendly.com/ai-projektmanager/demo
CALENDLY_LINK_AI_MARKETING=https://calendly.com/aimarketingbg/consultation
CALENDLY_LINK_SECURITY=https://calendly.com/classicsecurity/audit
CALENDLY_LINK_AGENTEN=https://calendly.com/varna-agenten/demo
CALENDLY_LINK_VARNAAI=https://calendly.com/varnaai/demo

# ==============================================
# DATABASE (OPTIONAL)
# ==============================================

DATABASE_URL=postgresql://user:password@localhost:5432/marketing_db

# Or MongoDB
MONGODB_URI=mongodb://localhost:27017/marketing_db

# ==============================================
# SECURITY
# ==============================================

# JWT Secret for API authentication
JWT_SECRET=your_random_secret_key_min_32_chars

# CORS Origins (comma-separated)
CORS_ORIGINS=https://ai-projektmanager.de,https://aimarketingbg.com,https://classicsecurity.net,https://varna-agenten.de,https://varnaai.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# EMAIL DELIVERY (SMTP)
# For transactional emails if not using MailChimp
# ==============================================

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@varnaai.com

# ==============================================
# ANALYTICS & REPORTING
# ==============================================

# Google Sheets (for CRM tracking)
GOOGLE_SHEETS_ID=your_sheet_id
GOOGLE_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# Amplitude
AMPLITUDE_API_KEY=your_amplitude_key

# ==============================================
# OPTIONAL SERVICES
# ==============================================

# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (email alternative)
SENDGRID_API_KEY=your_sendgrid_key

# Intercom (live chat)
INTERCOM_ACCESS_TOKEN=your_intercom_token

# ==============================================
# DEVELOPMENT
# ==============================================

# Set to 'true' to enable debug logging
DEBUG=false

# Disable SSL verification for local development
NODE_TLS_REJECT_UNAUTHORIZED=0
